<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30sp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:paddingTop="30sp"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:paddingBottom="20sp">

        <EditText
            android:id="@+id/fullNameProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:drawableEnd="@drawable/ic_person"
            android:drawableTint="@color/text_app"
            android:fontFamily="@font/font_family2"
            android:hint="Full Name"
            android:inputType="text"
            android:padding="10sp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/emailProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:drawableEnd="@drawable/ic_email"
            android:drawableTint="@color/text_app"
            android:fontFamily="@font/font_family2"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10sp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/cinProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:drawableEnd="@drawable/ic_cin"
            android:drawableTint="@color/text_app"
            android:fontFamily="@font/font_family2"
            android:hint="CIN"
            android:inputType="number"
            android:padding="10sp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/phoneNumberProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:drawableEnd="@drawable/ic_call"
            android:drawableTint="@color/text_app"
            android:fontFamily="@font/font_family2"
            android:hint="Phone Number"
            android:inputType="number"
            android:padding="10sp"
            android:textSize="15sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btnEditProfil"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/text_app"
        android:fontFamily="@font/font_family2"
        android:text="EDIT" />


    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/font_family2"
        android:text="LOG OUT" />
</LinearLayout>
</ScrollView>