<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_UpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:fontFamily="@font/font_family2"
                android:text="@string/welcome_sign_up"
                android:textColor="@color/text_app"
                android:textSize="23sp" />
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20sp"
                android:src="@drawable/logo" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:paddingBottom="30sp"
            android:paddingTop="30sp">
            <EditText
                android:id="@+id/fullNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_person"
                android:drawableTint="@color/text_app"
                android:fontFamily="@font/font_family2"
                android:hint="Full Name"
                android:inputType="text"
                android:padding="10sp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/emailSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/text_app"
                android:fontFamily="@font/font_family2"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10sp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/cinSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_cin"
                android:drawableTint="@color/text_app"
                android:fontFamily="@font/font_family2"
                android:hint="CIN"
                android:inputType="number"
                android:padding="10sp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/phoneNumberSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_call"
                android:drawableTint="@color/text_app"
                android:fontFamily="@font/font_family2"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="10sp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/passwordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_password"
                android:drawableTint="@color/text_app"
                android:fontFamily="@font/font_family2"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10sp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/confirmPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_password"
                android:drawableTint="@color/text_app"
                android:fontFamily="@font/font_family2"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10sp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/text_app"
                android:fontFamily="@font/font_family2"
                android:text="Sign up"
                android:layout_marginTop="10sp"/>

            <TextView
                android:id="@+id/gotoSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/font_family2"
                android:text="@string/gotoSignIn"
                android:textColor="@color/text_app"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>