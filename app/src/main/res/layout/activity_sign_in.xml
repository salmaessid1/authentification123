<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_InActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:fontFamily="@font/font_family"
                android:text="@string/welcome_sign_in"
                android:textColor="@color/text_app"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20sp"
                android:src="@drawable/logo" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/font_family"
                android:paddingLeft="8sp"
                android:text="Enter your Email Address : "
                android:textColor="@color/text_app"
                android:textSize="20sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:hint="exemple@gmail.com"
                android:textSize="13sp"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/text_app"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_family"
                android:paddingLeft="8sp"
                android:text="Password:"
                android:textColor="@color/text_app"
                android:textSize="20sp"
                android:layout_marginTop="10sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:hint="********"
                android:textSize="13sp"
                android:drawableEnd="@drawable/ic_password"
                android:drawableTint="@color/text_app"
                android:layout_marginTop="10sp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_family"
                android:text="Remember Me !"
                android:textColor="@color/text_app"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gotoForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10sp"
                android:fontFamily="@font/font_family"
                android:text="@string/gotopass"
                android:textColor="@color/text_app"
                android:textSize="15sp" />


            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/text_app"
                android:fontFamily="@font/font_family"
                android:text="Sign In" />

            <TextView
                android:id="@+id/gotoSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8sp"
                android:fontFamily="@font/font_family"
                android:text="New user Register here !"
                android:textColor="@color/text_app"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>